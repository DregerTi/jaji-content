{% extends 'base.html.twig' %}

{% block title %}Contents{% endblock %}

{% block body %}
    <h1>Contents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Prewiew_img</th>
                {% if content.prewiewImg %}
                    <td><img src="{{ asset(content.prewiewImg) }}" alt="prewiewImg" width="100" height="100"></td>
                {% else %}
                    <td>no image</td>
                {% endif %}
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ content.type }}</td>
            </tr>
            <tr>
                <th>Src</th>
                <td>{{ content.src }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ content.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_contents_index') }}">back to list</a>

    <a href="{{ path('back_contents_edit', {'slug': content.slug}) }}">edit</a>

    {{ include('back/contents/_delete_form.html.twig') }}
{% endblock %}
