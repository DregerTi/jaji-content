{% for message in app.flashes('success') %}
    <div id="notyf-message" class="notyf success">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('info') %}
    <div id="notyf-message" class="notyf info">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('warning') %}
    <div id="notyf-message" class="notyf warning">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div id="notyf-message" class="notyf notyf--error error">{{ message }}</div>
{% endfor %}
