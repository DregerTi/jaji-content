{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    {% embed '/components/back_office_header_and_menu.html.twig' with {'active': 'users'} %}
        {% block content %}
            <div class="flex-grow">
                {{ include('/components/sub_header.html.twig', {
                    title:'Utilisateurs',
                    text:'Vous pouvez consulter ici la liste des utilisateurs',
                }) }}
                <form method="GET" action="#" class="w-full">
                    <input name="search" type="text" class="search-bar w-full" value="{{ app.request.query.get('search') }}" placeholder="Que cherchez-vous ?">
                    <div class="flex flex-row gap-1 items-center">
                        <label for="role" class="block mb-0 text-md font-medium text-grey">Date de création :</label>
                        <select id="role" name="role" class="search-select bg-gray-50 border-0 text-grey hover:text-primary text-md font-medium rounded-lg focus:ring-none focus:border-0 block w-32 p-0.5 href-select">
                            {% if app.request.get('role') not in ['CLIENT', 'EDITEUR', 'ADMIN'] %}
                            <option selected>Choisir</option>
                            {% endif %}
                            <option value="ASC" {% if app.request.get('role') is defined and app.request.get('sortByCreationDate') == 'ASC' %}selected{% endif %}">Plus récent au plus ancien</option>
                            <option value="DESC" {% if app.request.get('role') is defined and app.request.get('sortByCreationDate') == 'DESC' %}selected{% endif %}>Plus ancien au plus récent</option>
                        </select>
                    </div>
                </form>
                <div class="flex-wrap flex gap-5">
                    {% for user in users %}
                        {{ include('/components/list_item.html.twig', {
                            path:'back_users_show',
                            pathParams:{ id: user.id},
                            name: user.firstname ~ ' ' ~ user.lastname,
                        }) }}
                    {% endfor %}
                </div>

            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}