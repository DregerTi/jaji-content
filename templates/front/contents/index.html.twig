{% extends 'base.html.twig' %}

{% block title %}Contents index{% endblock %}

{% block body %}

    {% for content in contents %}
        {{ include('/components/content_preview.html.twig', {type: content.type|lower, path:'front_contents_show', pathParams:{id: content.id}, title:content.title, date:content.updatedAt ? content.updatedAt|date('d-m-Y') : content.createdAt|date('d-m-Y'), image:asset(content.prewiewImg ), description:content.description, categories:content.getCategories }) }}
        <a href="{{ path('back_contents_edit', {'id': content.id}) }}">edit</a>
    {% else %}
        <tr>
            <td colspan="9">no records found</td>
        </tr>
    {% endfor %}
    <a href="{{ path('back_contents_new') }}">Create new</a>
{% endblock %}
