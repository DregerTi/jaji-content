<a class="content-preview content-preview----{{ type }}" href="{{ path(path, pathParams) }}">
    <article >
        <figure>
            <img src="{{ asset(image) }}" alt="content preview picture">
        </figure>
        <section>
            <div>
                <button class="big-btn--{{ type }}">
                    {% if type == "video" %}
                        <span class="material-symbols-outlined">play_arrow</span>
                    {% endif %}
                    {% if type == "podcast" %}
                        <span class="material-symbols-outlined">music_note</span>
                    {% endif %}
                    {% if type == "article" %}
                        <span class="material-symbols-outlined">subject</span>
                    {% endif %}
                </button>
            </div>
            <section class="flex gap-2">
                {% for categorie in categories %}
                    {{ include('/components/category_label.html.twig', {value: categorie.label, active:false, variant: type == "video" ? "blue" : type == "podcast" ? "red" : type == "article" ? "yellow" : null }) }}
                {% endfor %}
            </section>
            <date>{{ date }}</date>
            <label>{{ title }}</label>
            <p>{{ description }}</p>
        </section>
    </article>
</a>
